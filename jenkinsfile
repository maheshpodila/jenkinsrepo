pipeline {
    agent any

    parameters {
        string(name: 'NUMBERS', defaultValue: '1,2,3,4', description: 'Comma separated list of numbers')
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from the repository
                checkout scm
            }
        }

        stage('Compile Java') {
            steps {
                script {
                    // Compile the Java program
                    sh 'javac SumNumbers.java'
                }
            }
        }

        stage('Run SumNumbers') {
            steps {
                script {
                    // Run the program with the provided numbers as command-line arguments
                    def numbers = params.NUMBERS.split(',')
                    def result = sh(script: "java SumNumbers ${numbers.join(' ')}", returnStdout: true).trim()
                    echo "The sum is: ${result}"
                }
            }
        }
    }

    post {
        always {
            // Clean up any resources if necessary
            cleanWs()
        }
    }
}
